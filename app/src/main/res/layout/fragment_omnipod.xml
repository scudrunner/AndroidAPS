<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardColorBackground"
    tools:context=".plugins.pump.omnipod.OmnipodFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textviewOmnipyConnection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_dark_background"
                android:text="@string/omnipy_connection_status"
                android:textAppearance="@android:style/TextAppearance.Material.Large" />

            <TextView
                android:id="@+id/omnipy_txt_connection_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textviewPodStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_dark_background"
                android:text="@string/omnipod_pod_status"
                android:textAppearance="@android:style/TextAppearance.Material.Large" />

            <TextView
                android:id="@+id/omnipy_txt_pod_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textviewActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_dark_background"
                android:text="@string/omnipod_pod_actions"
                android:textAppearance="@android:style/TextAppearance.Material.Large" />

            <Button
                android:id="@+id/omnipy_btn_check_connection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/omnipy_check_conn"
                android:visibility="gone" />

            <Button
                android:id="@+id/omnipy_btn_restart_remote_host"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/omnipy_restart_remote"
                android:visibility="gone" />

            <Button
                android:id="@+id/omnipy_btn_shutdown_remote_host"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/omnipy_shutdown_remote"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnNewPod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/omnipod_cmd_new_pod"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnUpdateStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/omnipod_cmd_update_status"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnClearAlerts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/omnipy_cmd_clear_alerts"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnDeactivatePod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/omnipod_cmd_deactivate_pod"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textviewHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_dark_background"
                android:text="@string/omnipy_history"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>